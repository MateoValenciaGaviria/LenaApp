<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lena" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/dark_green</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Lena.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewH1" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily"></item>
    </style>

    <style name="TextViewH2" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily"></item>
    </style>

    <style name="TextViewH3" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily"></item>
    </style>

    <style name="ButtonWhiteStyle" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/btn_register</item>
        <item name="android:textSize">11dp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/login_input</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily"></item>
    </style>

    <style name="fb_btn" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/fb_btn</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily"></item>
    </style>

    <style name="g_btn" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/g_btn</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily"></item>
    </style>

    <style name="Theme.Lena.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Lena.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>